@model RakietaLogikaBiznesowa.Models.UserAndBank


@{
    ViewBag.Title = "AddBankAccount";
}


<h2>Dodaj konto bankowe do klienta</h2>

@using (@Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Wybierz konto i użytkownika</h4>
        <hr/>
        @Html.ValidationSummary(true,"",new {@class = "text-danger"})
        <div class="form-group">
            @Html.LabelFor(e => e.User.Login)
            <div class="col-md-10">
                @Html.DropDownList("Login", null, htmlAttributes: new {@class = "form-control"})
                @Html.ValidationMessageFor(e => e.User.Login)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(e => e.Bank.Id)
            <div class="col-md-10">
                @Html.DropDownList("Id", null, htmlAttributes: new {@class = "form-control"})
                @Html.ValidationMessageFor(e => e.Bank.Id)
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Add" class="btn btn-default" />
            </div>
        </div>
    </div>
        

}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
