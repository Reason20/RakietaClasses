@model RakietaLogikaBiznesowa.Models.UserAndRole

@{
    ViewBag.Title = "AddRoleToUser";
}
<h2>Dodaj Role do użytkownika</h2>

@using (@Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Wybierz konto i użytkownika</h4>
        <hr/>
        @Html.ValidationSummary(true, "", new {@class = "text-danger"})
        <div class="form-group">
            @Html.LabelFor(e => e.UserId, "User Login", htmlAttributes: new {@class = "control-label col-md-2"})
            <div class="col-md-10">
                @Html.DropDownList("User", null, htmlAttributes: new {@class = "form-control"})
                @Html.ValidationMessageFor(e => e.UserId)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(e => e.RoleId, "Role Name", htmlAttributes: new {@class = "control-label col-md-2"})
            <div class="col-md-10">
                @Html.DropDownList("Role", null, htmlAttributes: new {@class = "form-control"})
                @Html.ValidationMessageFor(e => e.RoleId)
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Add" class="btn btn-default"/>
            </div>
        </div>
    </div>
}  